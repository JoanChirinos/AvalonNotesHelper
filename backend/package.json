{
  "name": "avalon-notes-backend",
  "version": "2.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch 'routes/*.ts' --exec 'node --import tsx/esm' server.ts",
    "build": "tsc",
    "setup": "npm install && npx prisma migrate dev --name init && npx prisma generate && npm run db:seed",
    "start": "node dist/server.js",
    "prisma": "prisma",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "sqlite3": "^5.1.6",
    "uuid": "^12.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/uuid": "^9.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  },
  "description": "",
