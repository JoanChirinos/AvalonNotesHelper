{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,          // allows `import express from 'express'`
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "routes/**/*.ts"]
}

